<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="formcalcul">
        <h1>Ajouter un nouveau dossier</h1>
          <%= simple_form_for @dossier, class: 'form-field' do |f|%>
          <%= f.error_notification %>
          <%= f.input :name, label: "Nom du dossier" %>
          <%= f.input :client, label: "Client" %>
          <%= f.button :submit, "Go !" %>
          <% end %>
        <%= link_to 'Back', dossiers_path %>
      </div>
    </div>
  </div>
</div>


